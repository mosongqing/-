.mote-container {
  padding: 40rpx;
  background-color: #f9f9f9;
  min-height: 100vh;
}

.form-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
  text-align: center;
}
.form-item {
  margin-bottom: 40rpx;
}

.form-item text {
  display: block;
  margin-bottom: 12rpx;
  font-size: 30rpx;
  color: #333;
}

.form-input {
  width: 100%;
  height: 88rpx;
  padding: 20rpx;
  font-size: 32rpx; /* 输入内容更大 */
  color: #222;
  border: 1rpx solid #ccc;
  border-radius: 12rpx;
  background-color: #fff;
  box-sizing: border-box;
}

/* 专门设置 placeholder 字体 */
::placeholder {
  font-size: 26rpx;
  color: #aaa;
}





.form-input,
.picker {
  width: 100%;
  padding: 20rpx;
  font-size: 28rpx;
  border: 1rpx solid #ccc;
  border-radius: 12rpx;
  background-color: #fff;
}

.save-btn {
  background-color: #008c8c;
  color: #fff;
  font-size: 30rpx;
  padding: 20rpx 0;
  border-radius: 12rpx;
  margin-top: 40rpx;
}
